    <main>
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error}}</p>
            </div>
        </div>
    {{/if}}
    
        <section id="create-container">
            <div class="create-container-info">
                <h1>Create Volcano Wiki</h1>
                <form  method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{volcanoData.name}}" placeholder="...">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" value="{{volcanoData.location}}" placeholder="...">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" value="{{volcanoData.elevation}}" placeholder="...">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" value="{{volcanoData.lastEruption}}" placeholder="...">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{volcanoData.image}}" placeholder="http://...">
                    <label>Volcano Type:</label>
                    <select id="type" value="{{volcanoData.type}}" name="type">
                        <option value="Supervolcanoes">Supervolcanoes</option>
                        <option value="Submarine">Submarine</option>
                        <option value="Subglacial">Subglacial</option>
                        <option value="Mud">Mud</option>
                        <option value="Stratovolcanoes">Stratovolcanoes</option>
                        <option value="Shield">Shield</option>
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="...">{{volcanoData.description}}</textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
    </main>